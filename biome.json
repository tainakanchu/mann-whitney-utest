{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 100,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "*.d.ts",
      "dist/**/*",
      "node_modules/**/*",
      "build/**/*",
      "public/**/*",
      "bundle/**/*",
      "out/**/*",
      "generated/**/*",
      ".storybook/**/*",
      "cdk.out/**/*"
    ]
  }
}
